  <persistence-unit name="DentalClinicProjectJava_PU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>logic.AppUser</class>
    <class>logic.Appointment</class>
    <class>logic.Dentist</class>
    <class>logic.KidGuardian</class>
    <class>logic.Patient</class>
    <class>logic.Person</class>
    <class>logic.Schedule</class>
    <class>logic.Secretary</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/Dental_Clinic?serverTimezone=UTC"/>
      <property name="javax.persistence.jdbc.user" value="admin"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="6625"/>
